<div class="card">
  <div class="card-header">
    <%= tweet.user.full_name %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p><%= tweet.body%></p>
      <footer class="blockquote-footer"> <%= tweet.creation_date %></footer>
      <%= link_to "See", tweet, class: "btn btn-primary"%>
      <%= link_to "Delete", tweet, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger"%>
    </blockquote>
  </div>
</div>